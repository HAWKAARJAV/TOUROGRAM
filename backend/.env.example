PORT=3001
HOST=0.0.0.0
NODE_ENV=development
API_VERSION=v1

# Database
MONGODB_URI=mongodb://localhost:27017/hyperlocal-story-swap

# JWT Authentication
JWT_SECRET=change_me_access_secret
REFRESH_TOKEN_SECRET=change_me_refresh_secret
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=30d

# AI Integration (Travel Planner & Emotion Analysis)
AGENTX_API_KEY=your-agentx-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# CORS
FRONTEND_URL=http://localhost:8080

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=hyperlocal-story-swap-media

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Maps APIs (Optional)
MAPBOX_ACCESS_TOKEN=your-mapbox-token
GOOGLE_MAPS_API_KEY=your-google-maps-key

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn

# Testing
# Uncomment for Jest tests to skip DB
# SKIP_DB=1