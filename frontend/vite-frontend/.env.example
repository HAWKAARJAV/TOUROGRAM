# Frontend Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# API Configuration
VITE_API_URL=http://localhost:3001

# Application Configuration
VITE_APP_NAME=Story Swap
VITE_APP_VERSION=2.0.0

# MapTiler API (for maps integration)
VITE_MAPTILER_API_KEY=NSO8JuqWXOqh8UZs5tpY

# AI Integration
# WARNING: In production, AI keys should NEVER be in frontend
# Use backend proxy instead (see backend/routes/agentx-proxy.js)
VITE_AGENTX_KEY=your-agentx-key-only-for-local-development

# Feature Flags
VITE_ENABLE_AI_PLANNER=true
VITE_ENABLE_EMOTION_ANALYSIS=true
VITE_ENABLE_MAP_VIEW=true

# Analytics (Optional)
VITE_GA_TRACKING_ID=your-google-analytics-id
VITE_SENTRY_DSN=your-sentry-dsn

# Social Sharing (Optional)
VITE_FACEBOOK_APP_ID=your-facebook-app-id
VITE_TWITTER_HANDLE=@yourhandle
